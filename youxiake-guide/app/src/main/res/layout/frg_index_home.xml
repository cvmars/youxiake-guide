<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="@drawable/shape_gradient_home_header"
                  android:layout_height="wrap_content">


        <View android:layout_width="match_parent"
              android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="220dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="match_parent">

                <TextView android:layout_width="wrap_content"
                          android:textColor="@color/white"
                          android:text="3"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                          android:textColor="@color/white"
                          android:text="总带队"
                          android:gravity="center"
                          android:layout_marginTop="10dp"
                          android:layout_height="wrap_content"/>

            </LinearLayout>


            <com.youxiake.guide.widget.ColorArcProgressBar
                android:id="@+id/pg_home_goal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                app:is_need_content="true"
                app:front_color1="@color/white"
                app:max_value="5"
                android:gravity="center"
                app:back_width="5dp"
                app:front_width="5dp"
                app:total_engle="270"
                app:is_need_unit="true"
                app:is_need_title="false"
                app:string_unit="服务得分"
                app:back_color="#9fe5ff"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="match_parent">

                <TextView android:layout_width="wrap_content"
                          android:textColor="@color/white"
                          android:text="100"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>

                <TextView android:layout_width="wrap_content"
                          android:textColor="@color/white"
                          android:text="服务排名"
                          android:gravity="center"
                          android:layout_marginTop="10dp"
                          android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.youxiake.guide.widget.pulltorefrash.PulltoRefreshRecyclerView
        android:id="@+id/list_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>