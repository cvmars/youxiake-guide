<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_height="match_parent">
    <include layout="@layout/line_color_ddd"/>

    <RelativeLayout
        android:id="@+id/rl_meinfo_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="手机号码"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/line_color_ddd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="身份证号码"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/line_color_ddd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="导游证编号"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/line_color_ddd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="QQ"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/line_color_ddd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="紧急联系人"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/line_color_ddd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="职业"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/line_color_ddd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="详细地址"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/line_color_ddd"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="个人说明"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/line_color_ddd"/>

</LinearLayout>