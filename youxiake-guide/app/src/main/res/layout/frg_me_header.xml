<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
                android:background="@color/color_default_bg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="150dp">
        <View android:layout_width="match_parent"
              android:layout_height="0dp"
              android:background="@drawable/shape_gradient_me_header"
              android:layout_weight="100"/>
    </LinearLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/me_header_card"
            android:layout_width="match_parent"
            app:cardElevation="2dp"
            app:cardCornerRadius="6dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_height="150dp">


            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txt_me_name"
                    android:text="Cvmars"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/iv_me_avator"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"/>


                <ImageView
                    android:id="@+id/iv_me_avator"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="120dp"
                    android:layout_alignTop="@+id/txt_me_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"/>
                <TextView
                    android:id="@+id/txt_me_occupation"
                    android:text="领队"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_me_avator" android:layout_centerHorizontal="true"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    <View android:layout_width="match_parent"
          android:layout_below="@+id/me_header_card"
          android:layout_height="20dp"/>
</RelativeLayout>